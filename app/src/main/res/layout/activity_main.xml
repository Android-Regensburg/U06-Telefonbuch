<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint = "@string/name"/>


    <EditText
        android:id="@+id/et_friend_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/phone_number"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btn_create_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text ="@string/create_friend" />

    <EditText
        android:id="@+id/et_find_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/name"/>

    <Button
        android:id="@+id/btn_find_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="@string/find_friend"/>

    <TextView
        android:id="@+id/tv_see_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/name" />

    <TextView
        android:id="@+id/tv_see_phone_number"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/phone_number" />

</LinearLayout>